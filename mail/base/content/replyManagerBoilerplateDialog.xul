<?xml-stylesheet href="chrome://global/skin/global.css" type="text/css"?>
<?xml-stylesheet href="chrome://messenger/content/replyManager.css"?>
<!DOCTYPE dialog  SYSTEM "chrome://messenger/locale/replyManager.dtd">

<dialog id="replyManagerBoilerplateDialog" title="&replyManagerBoilerplateDialog.title;" 
xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
onload="onLoad();"
buttons="accept,cancel"
ondialogaccept="return doOK();"
ondialogcancel="return doCancel();"
flex="1">
<script type="text/javascript">
<![CDATA[
var prefBranch;
var textbox;
function onLoad() {
  prefBranch = Components.classes["@mozilla.org/preferences-service;1"]
                .getService(Components.interfaces.nsIPrefService)
                .getBranch("mail.replymanager.");
  textbox = document.getElementById("boilerplateTextbox");
  textbox.value = prefBranch.getCharPref("boilerplate");
}

function doOK() {
  prefBranch.setCharPref("boilerplate", textbox.value);
  return true;
}

function doCancel() {
  return true;
}
]]>
</script>
<dialogheader title="&replyManagerBoilerplateDialogheader.title;"/>
<textbox id="boilerplateTextbox" multiline="true" newlines="pasteintact" flex="1"/>
</dialog>
